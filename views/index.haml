    %label{for:'chat_msg'}= "chat"
    %input{type: 'submit', value: 'send'}
  editing:
  %ul#user_list
  %form{id: 'change_name_form' }
    %div#colorpicker
    %input{type: 'text',   name: 'name', id: 'change_name'}
