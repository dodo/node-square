#title.bar
  = partial("button", [{symbol:"✖", class:"delete_bubble", info:"burst bubble"}])
  .content
    #bubble
      Node
      %sup="❷"
    #hashes
      … and map your mind

#tool.bar
  .sub.left
    %form{id: 'chatter'}
      %input{type: 'text', name: 'msg', id: 'chat_msg'}
      %label{for:'chat_msg'}= "chat"
      %input{type: 'submit', value: 'send'}
  .sub.left
    editing:
    %ul#user_list
  .sub.right
    %form{id: 'name_changer' }
      #colorpicker
      %input{type: 'text',   name: 'name', id: 'change_name'}
      %label{for:'change_name'}= "name"
      %input{type: 'submit', value: 'update'}
  .sub.right
    %form{id: 'bubble_creator'}
      %input{type: 'text', name: 'name', id: 'create_mindmap'}
      %label{for:'create_mindmap'}= "mindmap"
      %input{type: 'submit', value: 'create'}
  .sub.right
    = partial("button", [{symbol:"⚗", class:"realtime", info:"crazy mode - nodes move in realtime"}])
